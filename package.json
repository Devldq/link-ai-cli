{
  "name": "ai-cli-chat",
  "version": "1.0.0",
  "description": "AI-powered command line chat application with Ollama integration",
  "main": "dist/index.js",
  "bin": {
    "link": "dist/index.js",
    "l": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "chat",
    "ollama",
    "code-generation",
    "code-review",
    "automation"
  ],
  "author": "AI CLI Chat Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "date-fns": "^2.30.0",
    "figlet": "^1.9.3",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "highlight.js": "^11.9.0",
    "inquirer": "^9.2.12",
    "joi": "^17.11.0",
    "marked": "^9.1.6",
    "ollama": "^0.5.0",
    "ora": "^7.0.1",
    "readline": "^1.3.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}
